<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="/css/admin-dashboard.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
    />
  </head>
  <body>
    <div class="admin-container">
      <header class="admin-header">
        <div class="header-content">
          <div class="header-left">
            <a href="/api/admin" class="home-button">
              <i class="fas fa-home"></i> Home
            </a>
            <h1>Admin Dashboard</h1>
          </div>
          <div class="admin-actions">
            <a
              href="/api/admin/adminPage/createComety?id=<%= adminId %>"
              class="create-button"
            >
              <i class="fas fa-plus-circle"></i> Create New Committee
            </a>
            <a href="/api/admin/logout" class="logout-button">
              <i class="fas fa-sign-out-alt"></i> Logout
            </a>
            <button onclick="shareDashboard()" class="share-button">
              <i class="fas fa-share-alt"></i> Share Dashboard
            </button>
          </div>
        </div>
      </header>

      <main class="admin-main">
        <section class="quick-actions">
          <a
            href="/api/admin/adminPage/createComety?id=<%= adminId %>"
            class="create-button"
          >
            <i class="fas fa-plus-circle"></i> Create New Committee
          </a>
        </section>

        <section class="committees-section">
          <div class="section-header">
            <h2><i class="fas fa-list"></i> All Committees</h2>
            <div class="stats-badge"><%= committees.length %> committees</div>
          </div>

          <% if (committees.length > 0) { %>
          <div class="committee-grid">
            <% committees.forEach((committee) => { %>
            <div class="committee-card">
              <div class="card-header">
                <h3><%= committee.title %></h3>
                <span class="status-badge active">Active</span>
              </div>
              <div class="card-details">
                <p>
                  <i class="far fa-calendar-alt"></i> <%=
                  committee.createdAt.toDateString() %>
                </p>
                <p>
                  <i class="fas fa-users"></i> <%= committee.totalMembers || '0'
                  %> members
                </p>
                <p>
                  <i class="fas fa-rupee-sign"></i> â‚¹<%=
                  committee.amountPerMember || '0' %> per member
                </p>
              </div>
              <div class="card-actions">
                <a
                  href="/api/admin/committee/<%= committee._id %>/admin"
                  class="action-button view"
                >
                  <i class="far fa-eye"></i> View
                </a>
                <form
                  action="/api/admin/committee/<%= committee._id %>/delete"
                  method="POST"
                  onsubmit="return confirm('Are you sure you want to delete this committee? This action cannot be undone.');"
                  style="display: inline"
                >
                  <button type="submit" class="action-button delete">
                    <i class="fas fa-trash"></i> Delete
                  </button>
                </form>
              </div>
            </div>
            <% }) %>
          </div>
          <% } else { %>
          <div class="empty-state">
            <i class="fas fa-folder-open"></i>
            <p>No committees found</p>
            <a
              href="/api/admin/adminPage/createComety?id=<%= adminId %>"
              class="create-button"
            >
              <i class="fas fa-plus-circle"></i> Create Your First Committee
            </a>
          </div>
          <% } %>
        </section>
      </main>

      <footer class="admin-footer">
        <p>Last updated: <%= new Date().toLocaleString() %></p>
      </footer>

      <script>
        function shareDashboard() {
          const shareLink = `${window.location.origin}/api/admin/dashboard/<%= adminId %>`;
          navigator.clipboard.writeText(shareLink).then(() => {
            alert("Dashboard share link copied to clipboard!");
          });
        }
      </script>
    </div>
  </body>
</html>
