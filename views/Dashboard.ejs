<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Committee Dashboard | Prabhakar's Cometii</title>
  <link rel="stylesheet" href="/css/dashboard.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
  <div class="dashboard-container">
    <!-- Header Section -->
    <header class="dashboard-header">
      <div class="header-content">
        <div class="header-left">
          <h1><i class="fas fa-users-cog"></i> Committee Dashboard</h1>
          <p class="subtitle">Prabhakar's Cometii Management System</p>
        </div>
        <div class="header-right">
          <a href="/api/admin" class="home-button">
            <i class="fas fa-home"></i> Home
          </a>
        </div>
      </div>
    </header>

    <!-- Main Content -->
    <main class="dashboard-main">
      <section class="committees-section">
        <div class="section-header">
          <h2><i class="fas fa-list-ul"></i> All Committees</h2>
          <div class="stats-badge">
            <span><%= committees.length %> Committees</span>
          </div>
        </div>

        <% if (committees.length > 0) { %>
          <div class="committee-grid">
            <% committees.forEach((committee) => { %>
              <form action="/api/admin/committee" method="POST" class="committee-form">
                <input type="hidden" name="committeeId" value="<%= committee._id %>">
                <button type="submit" class="committee-card">
                  <div class="card-header">
                    <h3><%= committee.title %></h3>
                    <span class="status-badge <%= committee.status || 'active' %>">
                      <%= committee.status || 'Active' %>
                    </span>
                  </div>
                  
                  <div class="card-body">
                    <div class="info-row">
                      <i class="fas fa-calendar-alt"></i>
                      <span>Created: <%= committee.createdAt.toLocaleDateString() %></span>
                    </div>
                    
                    <div class="info-row">
                      <i class="fas fa-user-friends"></i>
                      <span>Members: <%= committee.totalMembers || 'N/A' %></span>
                    </div>
                    
                    <div class="info-row">
                      <i class="fas fa-rupee-sign"></i>
                      <span>Amount: ₹<%= committee.amountPerMember || 'N/A' %></span>
                    </div>
                    
                    <div class="info-row">
                      <i class="fas fa-sync-alt"></i>
                      <span>Frequency: <%= committee.frequency || 'Monthly' %></span>
                    </div>
                  </div>
                  
                  <div class="card-footer">
                    <span class="view-link">
                      <!-- <i class="fas fa-eye"></i> View Details -->
                    </span>
                  </div>
                </button>
              </form>
            <% }) %>
          </div>
        <% } else { %>
          <div class="empty-state">
            <i class="fas fa-inbox"></i>
            <h3>No Committees Found</h3>
            <p>You haven't created any committees yet. Start by creating a new one.</p>
            <a href="/api/admin/create-committee" class="create-button">
              <i class="fas fa-plus"></i> Create Committee
            </a>
          </div>
        <% } %>
      </section>
    </main>

    <!-- Footer -->
    <footer class="dashboard-footer">
      <p>© 2025 Prabhakar's Cometii. All rights reserved.</p>
      <div class="footer-links">
        <a href="#"><i class="fas fa-question-circle"></i> Help</a>
        <a href="#"><i class="fas fa-cog"></i> Settings</a>
      </div>
    </footer>
  </div>
</body>
</html>